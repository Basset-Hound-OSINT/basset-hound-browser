{
  "name": "basset-hound-browser",
  "version": "8.1.4",
  "description": "Custom Electron-based browser for OSINT and automation tasks with bot detection evasion",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "test": "jest",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --testTimeout=60000",
    "test:e2e": "jest tests/e2e --testTimeout=180000",
    "test:bot-detection": "jest tests/bot-detection --testTimeout=120000",
    "test:legacy": "node tests/integration.test.js",
    "test:verbose": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageDirectory=coverage",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test:evasion": "node tests/integration.test.js --evasion",
    "test:client": "node tests/test-client.js --interactive",
    "test:client:run": "node tests/test-client.js --test",
    "test:integration:all": "node tests/integration/run-all.js",
    "test:integration:communication": "node tests/integration/extension-browser/communication.test.js",
    "test:integration:command-sync": "node tests/integration/extension-browser/command-sync.test.js",
    "test:integration:session-sharing": "node tests/integration/extension-browser/session-sharing.test.js",
    "test:integration:form-filling": "node tests/integration/scenarios/form-filling.test.js",
    "test:integration:navigation": "node tests/integration/scenarios/navigation.test.js",
    "test:integration:data-extraction": "node tests/integration/scenarios/data-extraction.test.js",
    "test:integration:screenshot": "node tests/integration/scenarios/screenshot.test.js",
    "test:integration:protocol": "node tests/integration/protocol.test.js",
    "test:integration:scenarios": "node tests/integration/scenarios/form-filling.test.js && node tests/integration/scenarios/navigation.test.js && node tests/integration/scenarios/data-extraction.test.js && node tests/integration/scenarios/screenshot.test.js"
  },
  "keywords": [
    "electron",
    "browser",
    "osint",
    "automation",
    "websocket"
  ],
  "author": "Basset Hound Team",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.1.7",
    "node-forge": "^1.3.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "spectron": "^10.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "websocket/**/*.js",
      "evasion/**/*.js",
      "proxy/**/*.js",
      "input/**/*.js",
      "utils/**/*.js",
      "cookies/**/*.js",
      "profiles/**/*.js",
      "geolocation/**/*.js",
      "storage/**/*.js",
      "tabs/**/*.js",
      "sessions/**/*.js",
      "logging/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "setupFilesAfterEnv": [
      "./tests/helpers/setup.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "verbose": true
  },
  "build": {
    "appId": "com.bassethound.browser",
    "productName": "Basset Hound Browser",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "updater/**/*",
      "websocket/**/*",
      "evasion/**/*",
      "proxy/**/*",
      "tabs/**/*",
      "windows/**/*",
      "plugins/**/*",
      "cookies/**/*",
      "sessions/**/*",
      "profiles/**/*",
      "geolocation/**/*",
      "headers/**/*",
      "storage/**/*",
      "devtools/**/*",
      "history/**/*",
      "extraction/**/*",
      "inspector/**/*",
      "downloads/**/*",
      "blocking/**/*",
      "network/**/*",
      "network-analysis/**/*",
      "automation/**/*",
      "technology/**/*",
      "headless/**/*",
      "config/**/*",
      "recording/**/*",
      "input/**/*",
      "utils/**/*",
      "logging/**/*",
      "config.example.yaml",
      "!**/*.test.js",
      "!**/tests/**",
      "!**/*.md",
      "!**/examples/**"
    ],
    "extraResources": [
      {
        "from": "config.example.yaml",
        "to": "config.example.yaml"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Basset Hound Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Basset Hound Browser"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development",
      "maintainer": "Basset Hound Team",
      "vendor": "Basset Hound",
      "synopsis": "OSINT Browser with Bot Evasion",
      "description": "Custom Electron-based browser for OSINT investigations and AI-driven web automation with bot detection evasion"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "deb": {
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1"
      ]
    },
    "rpm": {
      "depends": [
        "gtk3",
        "libnotify",
        "nss",
        "libXScrnSaver",
        "libXtst",
        "xdg-utils",
        "at-spi2-core",
        "libuuid"
      ]
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
